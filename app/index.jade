doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Super Calculator
    link(rel='stylesheet', href='css/app.css')
  body
    h1 Super Calculator

    table
      tbody
        tr
          td#display(colspan=5) 0
        tr
          td.number.button 7
          td.number.button 8
          td.number.button 9
          td.operator.button +
          td.operator.button ∑
        tr
          td.number.button 4
          td.number.button 5
          td.number.button 6
          td.operator.button -
          td.operator.button x<sup>y</sup>
        tr
          td.number.button 1
          td.number.button 2
          td.number.button 3
          td.operator.button x
          td.operator.button √
        tr
          td.number.button 0
          td.decimal.button .
          td.toggle.button ±
          td.operator.button ÷
          td.operator.button !
        tr
          td.clear.button X
          td.clear.button C
          td
          td.button#push(colspan=2) Push

    div#box &nbsp;

    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
